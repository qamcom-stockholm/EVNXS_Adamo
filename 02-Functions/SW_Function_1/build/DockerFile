FROM ubuntu:18.04



RUN apt update -y  
RUN apt upgrade -y 
RUN apt-get install -y build-essential git
RUN apt-get update && \
  apt-get install -y software-properties-common && \
  rm -rf /var/lib/apt/lists/*
RUN add-apt-repository ppa:ubuntu-toolchain-r/test
RUN apt install -y g++-10 
RUN update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-10 999

        


RUN apt purge --auto-remove cmake
WORKDIR /cpp-env
COPY ./kitware_install.sh . 
RUN ./kitware_install.sh

RUN apt install -y cmake
RUN cmake --version
WORKDIR /cpp-dev/openssl_src
RUN git clone https://github.com/openssl/openssl.git
WORKDIR /cpp-dev/openssl_src/openssl
RUN ./Configure
RUN make
RUN make test
WORKDIR /cpp-dev/amqp_cpp
RUN git clone https://github.com/CopernicaMarketingSoftware/AMQP-CPP.git
WORKDIR /cpp-dev/amqp_cpp/AMQP-CPP/build
RUN cmake .. -DAMQP-CPP_BUILD_SHARED=ON -DAMQP-CPP_LINUX_TCP=ON
RUN cmake --build . --target install





